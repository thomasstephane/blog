<div class="container">
  <div class="posts">
    <ul>
      <% @list.reverse.each do |post| %>
        <li>
          <a href="/posts/<%= post.id %>">
            <%= post.title %>
          </a>
          <% if post.published %>
            <%= " - published" %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="errors">
   <% if @post.errors.any? %>
      <ul>
        <% @post.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="new-post">

    <form action="/posts" method="post">
      <input type="text" name="title" placeholder="Add a title" class="title">
      <textarea type="text" name="content" placeholder="Add some content" class="content"></textarea>
      <div class="published-status">
        <div class="selected">
          <input type="radio" name="published" value="draft"><span>Draft</span>
        </div>
        <div class="non-selected">
          <input type="radio" name="published" value="live"><span>Live</span>
        </div>
        <div class="save">
          <input type="submit" value="Save" class="Save">
        </div>
      </div>
    </form>
  </div>
  <div id="menu">
    <form action="/logout" method='get'>
      <input type="submit" value="Logout">
    </form>
  </div>
</div>